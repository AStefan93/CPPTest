{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Release",
            "command": "bazel build --config release ... && bazel run @hedron_compile_commands//:refresh_all",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Build Debug",
            "command": "bazel",
            "args": [
                "build",
                "--config",
                "debug",
                "...",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "process",
            "label": "Clean",
            "command": "bazel",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}